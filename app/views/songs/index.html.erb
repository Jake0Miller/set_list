<h1 id='title'>
  All Songs
  <% unless @artist.nil? %>
    for
    <%= @artist.name %>
  <% end %>
</h1>

<% @songs.each do |song| %>
  <section id='song-<%= song.id %>' class='song'>
    <h2><%= song.title %></h2>
    <p>Play Count: <%= song.play_count %></p>
    <%= button_to "Add Song", cart_path(song), method: :patch %>
  </section>
<% end %>
